<h1><%= title%> / Codeial</h1>
<section id="feed-posts">
  <h4>Posts</h4>
  <% if(locals.user) { %>
  <form id="new-post-form" method="POST" action="/posts/">
    <textarea
      name="content"
      cols="30"
      rows="3"
      placeholder="Enter here.."
      required
    ></textarea>
    <input type="submit" value="Post" />
  </form>
  <% } %>
  <div id="posts-list-container">
    <ul>
      <% for(const post of posts) { %> <%- include("post", {post : post}) %> <%
      }%>
    </ul>
  </div>
</section>
